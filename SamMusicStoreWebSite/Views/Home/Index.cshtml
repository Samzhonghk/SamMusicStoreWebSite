@model List<SamMusicStoreWebSite.Models.Album>
@{
    ViewBag.Title = "Sam Music Store";
}

<div id="promotion"></div>

<ul id="album-list">

@foreach (var album in @Model)
{

    <li>
        <a href="@Url.Action("Details", "Store", new { id = album.AlbumId })">

            <img alt="@album.Title" src="@album.AlbumArtUrl" /> <span>@album.Title</span>
        </a>
    </li>

}

</ul>

